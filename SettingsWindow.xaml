<Window x:Class="BluRip.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pushover settings" Height="181" Width="459" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
    <Grid>
        <Button Content="Ok" HorizontalAlignment="Left" Margin="12,0,0,12" Name="buttonOk" Width="75" Height="23" VerticalAlignment="Bottom" IsDefault="True" Click="buttonOk_Click" />
        <CheckBox Content="Activated" Height="16" HorizontalAlignment="Left" Margin="12,81,0,0" Name="checkBoxActivated" VerticalAlignment="Top" Checked="checkBoxActivated_Checked" Unchecked="checkBoxActivated_Checked" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" IsDefault="True" Margin="93,0,0,12" Name="buttonCancel" VerticalAlignment="Bottom" Width="75" IsCancel="True" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="82,12,0,0" Name="AppTokenTxt" VerticalAlignment="Top" Width="343" />
        <Label Content="App Token:" Height="28" HorizontalAlignment="Left" Margin="12,13,0,0" Name="label1" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="82,46,0,0" Name="UserTokenTxt" VerticalAlignment="Top" Width="343"/>
        <Label Content="User Token:" Height="28" HorizontalAlignment="Left" Margin="12,47,0,0" Name="label2" VerticalAlignment="Top" />
        <Button Content="Test" Height="23" HorizontalAlignment="Left" IsDefault="False" Margin="350,0,0,10" x:Name="buttonTest" VerticalAlignment="Bottom" Width="75" IsCancel="False" Click="buttonTest_Click" />
    </Grid>
</Window>
